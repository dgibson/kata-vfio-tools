#cloud-config
system_info:
  default_user:
    name: root

resize_rootfs: True
timezone: @TZ@
disable_root: False

ssh_authorized_keys:
  - @KEY@

packages:
  - git

write_files:
  - path: /root/.bashrc
    append: true
    content: |
      export GOPATH=~/go
      export PATH=$PATH:$GOPATH/bin:/usr/local/go/bin
  - path: /root/kata-tests-setup.sh
    permissions: '0755'
    content: |
      #! /bin/sh
      set -e
      export USER=root
      export HOME=/root
      export GOPATH=~/go
      export PATH=$PATH:/usr/local/go/bin:$GOPATH/bin
      KATASRC=$GOPATH/src/github.com/kata-containers

      mkdir -p $KATASRC
      cd $KATASRC
      git clone https://github.com/kata-containers/tests

      (cd tests && .ci/setup.sh)

      poweroff

runcmd:
  - [ sh, -c, echo "runcmd setup" ]
  - [ /root/kata-tests-setup.sh ]

final_message: "READY!"
